{
	"extends": ["plugin:react/recommended", "wikimedia"],
	"plugins": ["react"],
	"parserOptions": {
		"sourceType": "module",
		"ecmaVersion": 7,
		"ecmaFeatures": {
			"experimentalObjectRestSpread": true,
			"jsx": true
		}
	},
	"globals": {
		"APP_ENV": true
	},
	"env": {
		"es6": true,
		"browser": true,
		"node": true
	},
	"rules": {
    "dot-notation": [
			"error",
			{
				"allowPattern": "^catch$"
			}
		],
		"no-bitwise": [
			"error",
			{
				"int32Hint": true
			}
		],
		"no-shadow": "error"
  }
}
